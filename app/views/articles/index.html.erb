<p id="notice"><%= notice %></p>

<h1>Articles</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Decription</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.decription %></td>
        <td><button class="btn btn-info"><%= link_to 'Show', article %></td></button>
        <td><button class="btn btn-info"><%= link_to 'Edit', edit_article_path(article) %></td></button>
        <td><button class="btn btn-danger"><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td></button>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

