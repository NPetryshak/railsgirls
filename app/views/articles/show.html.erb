<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>
<%= image_tag(@article.picture_url, width: 300, height: 400) if @article.picture.present? %>
<p>
  <strong>Decription:</strong>
<%= @article.decription %>
</p>
<h3>Comments</h3>
<% @comments.each do |comment| %>
  <div>
    <br>
    <p><%= comment.body %></p>
    <button class="btn btn-danger"><%= link_to 'Delete', comment_path(comment), method: :delete, data: { confirm: 'Are you sure?' } %></button>
  </div>
<% end %>


<%= render partial: 'comments/form', locals: { comment: @comment } %>
<button class="btn btn-info"><%= link_to 'Edit', edit_article_path(@article) %></button> |
<button class="btn btn-info"><%= link_to 'Back', articles_path %></button>
